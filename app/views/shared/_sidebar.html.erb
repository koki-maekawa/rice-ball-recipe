<aside class="m-4 p-4 bg-white shadow-lg rounded-box">
  <ul class="menu space-y-2 font-bold">
    <li>
      <%= link_to new_rice_ball_path, class: "flex items-center space-x-2" do %>
        <i class="fa-solid fa-utensils"></i>
        <span><%= t("defaults.create_rice_ball") %></span>
      <% end %>
    </li>
    <li>
      <%= link_to rice_balls_path, class: "flex items-center space-x-2" do %>
        <i class="fa-solid fa-magnifying-glass"></i>
        <span><%= t("defaults.search_rice_ball") %></span>
      <% end %>
    </li>
    <% if user_signed_in? %>
      <li>
        <%= link_to user_path(current_user), class: "flex items-center space-x-3" do %>
          <i class="fa-solid fa-person"></i>
          <span><%= t("defaults.my_page") %></span>
        <% end %>
      </li>
    <% end %>
  </ul>
</aside>
