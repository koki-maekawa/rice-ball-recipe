<div class="flex flex-col md:flex-row nested-fields" data-ingredient-forms-target="ingredientFields">
  <div class="form-control w-2/3">
    <%= f.text_field :name, class: "input input-bordered w-full", placeholder: t("defaults.ingredient_name_placeholder") %>
  </div>
  <div class="form-control w-1/3">
    <%= f.text_field :amount, class: "input input-bordered w-full", placeholder: t("defaults.ingredient_amount_placeholder") %>
  </div>
  <div class="form-control w-12">
    <%= link_to "#", data: { action: "click->ingredient-forms#removeForm" }, class: "btn btn-error" do %>
      <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor">
        <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    <% end %>
    <%= f.hidden_field :_destroy %>
  </div>
</div>
