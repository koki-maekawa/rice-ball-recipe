<div class="bg-base-100 shadow-sm rounded-box w-full max-w-xl h-fit text-center p-4 sm:p-5 md:p-6 my-4 mx-2 sm:mx-4 md:mx-6 lg:mx-8">
  <h2>
    <span class="text-sm sm:text-base md:text-lg font-bold"><%= t(".forgot_your_password") %></span>
  </h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "flex flex-col gap-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="w-full">
      <%= f.label :email, class: "label text-sm sm:text-base md:text-lg" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-sm sm:input-md input-bordered w-full" %>
    </div>
    <div class="w-full">
      <%= f.submit t(".send_me_reset_password_instructions"), class: "w-full btn btn-sm sm:btn-md btn-primary" %>
    </div>
  <% end %>
  <div class="mt-4 text-sm sm:text-base md:text-lg">
    <%= render "devise/shared/links" %>
  </div>
</div>
