<div class="m-2 p-6 md:p-10 bg-base-100 shadow-lg rounded-box max-w-xl w-full">
  <h2 class=" text-center"><span class="text-2xl font-bold"><%= t(".forgot_your_password") %><span></h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-control">
          <%= f.label :email, class: "label font-medium text-gray-600" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
        </div>
        <div class="form-control">
          <%= f.submit t(".send_me_reset_password_instructions"), class: "btn btn-primary w-full" %>
        </div>
      <% end %>
      <div class="text-center mt-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
