<div class="m-2 p-6 md:p-10 bg-base-100 shadow-lg rounded-box max-w-xl w-full">
  <h2 class=" text-center"><span class="text-2xl font-bold"><%= t(".sign_in") %><span></h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4 mt-4" }) do |f| %>
        <div class="form-control">
          <%= f.label :email, class: "label font-medium text-gray-600" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
        </div>
        <div class="form-control">
          <%= f.label :password, class: "label font-medium text-gray-600" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="flex gap-2 py-4">
            <%= f.check_box :remember_me, class: "checkbox checkbox-primary" %>
            <%= f.label :remember_me, class: "text-gray-600" %>
          </div>
        <% end %>
        <div class="form-control">
          <%= f.submit t(".sign_in"), class: "btn btn-primary w-full" %>
        </div>
      <% end %>
      <div class="text-center mt-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
