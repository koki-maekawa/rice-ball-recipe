<div class="m-2 p-6 md:p-10 bg-base-100 shadow-lg rounded-box max-w-xl w-full">
  <h2 class=" text-center"><span class="text-2xl font-bold"><%= t(".sign_up") %><span></h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-control">
          <%= f.label :name, class: "label font-medium text-gray-600" %>
          <%= f.text_field :name, autofocus: true, class: "input input-bordered w-full" %>
        </div>
        <div class="form-control">
          <%= f.label :email, class: "label font-medium text-gray-600" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
        </div>
        <div class="form-control">
          <%= f.label :password, class: "label font-medium text-gray-600" %>
          <% if @minimum_password_length %>
            <p class="text-sm text-gray-500">
              <%= t("devise.shared.minimum_password_length", count: @minimum_password_length) %>
            </p>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full" %>
        </div>
        <div class="form-control">
          <%= f.label :password_confirmation, class: "label font-medium text-gray-600" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
        </div>
        <div class="flex gap-2 py-4">
          <%= f.check_box :policies_agreed, class: "checkbox checkbox-primary" %>
          <%= f.label class: "text-gray-600" do %>
            <%= t(".policies_agreed",
                  terms_url: link_to(t("defaults.terms_of_service"), "https://kiyac.app/termsOfService/irLBMVrx7DpxxxTkrJTj", class: "link link-primary", target: "_blank", rel: "noopener"),
                  privacy_url: link_to(t("defaults.privacy_policy"), "https://kiyac.app/privacypolicy/EUhTMocT4INUTEElzvoq", class: "link link-primary", target: "_blank", rel: "noopener")).html_safe %>
          <% end %>
        </div>
        <div class="form-control">
          <%= f.submit t(".sign_up"), class: "btn btn-primary w-full" %>
        </div>
      <% end %>
      <div class="text-center mt-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
