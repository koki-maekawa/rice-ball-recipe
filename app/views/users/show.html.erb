<div class="flex flex-col p-4 gap-12">
  <div>
    <h3 class="text-3xl font-semibold text-center"><%= @user.name %></h3>
  </div>
  <div>
    <h3 class="text-2xl font-semibold"><%= t(".created_recipe") %></h3>
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-6">
      <% @created_rice_balls.each do |rice_ball| %>
        <%= render "rice_balls/rice_ball", rice_ball: rice_ball, user: @user %>
      <% end %>
    </div>
    <div class="flex justify-center">
      <%= paginate @created_rice_balls, param_name: "creatred_page" %>
    </div>
  </div>
  <div>
    <h3 class="text-2xl font-semibold"><%= t(".bookmark") %></h3>
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-6">
      <% @bookmarked_rice_balls.each do |rice_ball| %>
        <%= render "rice_balls/rice_ball", rice_ball: rice_ball, user: @user %>
      <% end %>
    </div>
    <div class="flex justify-center">
      <%= paginate @bookmarked_rice_balls, param_name: "bookmarked_page" %>
    </div>
  </div>
</div>
