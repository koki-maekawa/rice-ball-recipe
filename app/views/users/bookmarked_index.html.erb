<div class="flex flex-col p-4 gap-12">
  <div class="bg-base-100 shadow-lg rounded-box p-4">
    <h2 class="text-center">
      <%= link_to user_path(@user), class: "font-bold text-lg sm:text-xl md:text-xl" do %>
        <%= @user.name %>
      <% end %>
    </h2>
  </div>
  <div>
    <h3><span class="font-bold text-lg sm:text-xl md:text-xl"><%= t("defaults.bookmark") %></span></h3>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <% @bookmarked_rice_balls.each do |rice_ball| %>
        <%= render "rice_balls/rice_ball", rice_ball: rice_ball, user: rice_ball.user %>
      <% end %>
    </div>
    <div class="flex justify-center">
      <%= paginate @bookmarked_rice_balls %>
    </div>
  </div>
</div>
